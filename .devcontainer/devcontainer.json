{
  "name": "AI Agents Course Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": "latest"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "jupyter.jupyterServerType": "local"
      }
    }
  },
  "workspaceFolder": "/workspaces/msft_agents_course",
  "remoteUser": "vscode",
  "containerEnv": {
    "PYTHONUNBUFFERED": "1"
  },
  "forwardPorts": [8000, 7860, 8888],
  "portsAttributes": {
    "8000": { "label": "App/Chainlit/Uvicorn", "onAutoForward": "openPreview" },
    "7860": { "label": "Gradio", "onAutoForward": "openPreview" },
    "8888": { "label": "Jupyter", "onAutoForward": "openBrowser" }
  },
  "otherPortsAttributes": {
    "onAutoForward": "notify"
  },
  "postCreateCommand": "python -m pip install --upgrade pip && python -m pip install -r requirements.txt && python -m ipykernel install --user"
}
